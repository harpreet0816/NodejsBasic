<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }
        table {
            border-collapse: collapse;
            width: 50%;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1>URL Shortner</h1>
    <% if (locals.mail) { %>
        <h1> Email: <%= mail %></h1>
    <% } %>
    <% if (locals.id) { %>
        <h1> Use this Url to visit:- http://localhost:3000/url/<%= id %></h1>
    <% } %>
        

    <form method="post" action="/url" id="urlForm">
        <label>Enter Your Valid Url:- </label>
        <input type="text" name="url" placeholder="https://example.com" required />
        <button>Generate</button>
    </form>
    <% if (locals.urls) { %>
    <h1>History of your Data</h1>
    <table>
        <thead>
            <th>S.No</th>
            <th>ShortId</th>
            <th>RedirectURL</th>
            <th>Clicks</th>
        </thead>
        <tbody>
            <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td>http://localhost:3000/url/<%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>
                <% }) %>
        </tbody>
    </table>
    <% } %>
     
</body>
</html>